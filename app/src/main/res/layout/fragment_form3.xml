<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40dp">

    <!-- Address input -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter address" />

    <!-- Set my actual address button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSetActualAddress"
        android:layout_width="147dp"
        android:layout_height="35dp"
        android:background="@drawable/button2_bg"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="Set my actual address"/>

    <!-- Choose address or set actual location -->
    <RadioGroup
        android:id="@+id/radioGroupLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioChooseAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Address"/>

        <RadioButton
            android:id="@+id/radioSetActualLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Actual Location"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTargetLocation"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter target location" />

    <!-- Time input -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTime"
        android:layout_width="190dp"
        android:background="@drawable/edit_text_bg"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:hint="Enter time in hours"/>

    <!-- Create route button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateRoute"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button2_bg"
        android:text="Create Route"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp" />
</LinearLayout>
